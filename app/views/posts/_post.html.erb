<div class="posts">
<li id="post-<%= post.id %>">

  <span class="user"><%= link_to post.user.name, post.user %></span>
  <span class="content">
    <%= post.content %>


  </span>
  <span class="timestamp">
    uttered <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user?(post.user) %>
      <%= link_to "annihilate", post, method: :delete,
                                           data: { confirm: "You sure?"} %>
    <% end %>
  </span>
</li>
</div>
